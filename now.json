{
  "version": 2,
  "builds": [
    {
      "src": "*.js",
      "use": "@now/node-server"
    }
  ],
  "env": {
    "MONGO_URI": "@mongo-uri",
    "SENDGRID_API_KEY": "@sendgrid-api-key",
    "CAPAZY_EMAIL": "@capazy-email",
    "APOLLO_API_URI": "@apollo-api-uri",
    "CLIENT_URI": "@client-uri"
  },
  "routes": [
    { "src": "/auth/.*", "dest": "/index.js" },
    { "src": "/api/.*", "dest": "/index.js" }
  ]
}
